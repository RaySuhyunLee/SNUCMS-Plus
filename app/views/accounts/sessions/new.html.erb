<style>
  .ui.container {
    margin: 4em;
  }
</style>

<div class="ui text container" >
  <% unless alert == nil %>
    <div class="ui segment", id="alert"><%= alert %></div>
  <% end %>
  <div class="ui segment">
    <div class="ui two column middle aligned very relaxed stackable grid">
      <div class="column"> 
        <div class="ui form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),
             html: {class: "ui form"}) do |f| %>
             <div class="field ui left icon input">
               <i class="user icon"></i>
               <%= f.email_field :email, autofocus: true, placeholder: "email" %>
            </div>
          
            <div class="field ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
            </div>

            <div class="actions">
              <%= f.submit "로그인", class: "ui blue button" %>
              <% if devise_mapping.rememberable? -%>
                <div class="field ui checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
           
            <%= link_to "비밀번호를 잊으셨나요?", new_user_password_path %>
            
          <% end %>
        </div>
      </div>

      <div class="ui vertical divider">OR</div>

      <div class="center aligned column">
        <%= link_to new_user_registration_path do %>
          <div class="ui big green labeled icon button">
            <i class="signup icon"></i>
            가입
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<div class="ui container">
  <h1 class="ui header">eTL은 잊으세요!</h1>
  <h2 class="ui header">샤과밭이 책임지겠습니다</h2>
</div>
