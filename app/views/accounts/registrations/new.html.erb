<style>
  .ui.text.container {
    margin-top: 4em;
  }
  .ui.divider {
    margin-top: 3em;
  }
</style>

<div class="ui text container">
  <div class="ui segment">
    <div class="ui large header">계정이 없다구요? 지금 당장 가입하세요!</div>

    <div class="margin"></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: {class: "ui form"}) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="ui divider"></div>

      <div class="required field">
        <%= f.label :email%>
        <%= f.email_field :email, autofocus: true, placeholder: "my_awesome@email.com" %>
      </div>

      <div class="ui divider"></div>

      <div class="required field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      </div>

      <div class="required field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
      </div>

      <div class="ui horizontal divider">세부 정보</div>

      <div class="required field">
        <%= f.label :name, "이름" %>
        <%= f.text_field :name, autocomplete: "off"  %>
      </div>

      <div class="field">
        <%= f.label :stdent_id, "학번" %>
        <%= f.text_field :student_id, placeholder: "2013-11111" %>
      </div>

      <div class="field">
        <%= f.label :college, "학교" %>
        <%= f.text_field :college %>
      </div>

      <div class="field">
        <%= f.label :major, "전공" %>
        <%= f.text_field :major %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "ui button" %>
      </div>
    <% end %>

  </div>
</div>
