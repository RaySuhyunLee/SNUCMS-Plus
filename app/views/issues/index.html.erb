<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
<th><!--Contents--></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
	  <% @issue_path = course_issue_path(@parent.id, issue.id) 
#@edit_path = edit_course_issue_path(@parent.id, issue.id) %>
      <tr>
        <td><%= issue.title %></td>
        <td><!--%= issue.contents %--></td>
        <td><%= link_to 'Show', @issue_path %></td>
        <td><!-- freezed %= link_to 'Edit', @edit_path %--></td>
        <td><%= link_to 'Destroy', @issue_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

