<p id="notice"><%= notice %></p>
<div class="ui container">
  <div class="ui huge header">이슈 목록</div>
  <div class="ui divider"></div>

  <table class="ui table">
    <tbody>
      <% @issues_page.each do |issue| %>
        <% if @parent_name == "Course" %>
          <% @issue_path = course_issue_path(@parent.id, issue.parent_issue_id) %>
        <% end %>
        <tr>
          <td><%= link_to issue.title, @issue_path%></td>
          <td><%= issue.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @issues_page %>

  <div class="ui divider"></div>
  <%= link_to @new_path do %>
    <div class="ui button">글쓰기</div>
  <% end %>
  <%= link_to course_path(@parent.id) do %>
    <div class="ui button">돌아가기</div>
  <% end %>
</div>

