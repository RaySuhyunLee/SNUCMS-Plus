<p id="notice"><%= notice %></p>
<div class="ui container">
  <div class="ui huge header">이슈 목록</div>
  <div class="ui divider"></div>

  <div class="ui tag labels">
    <a class="ui label", href="<%= @index_path %>">All</a>
    <% Issuetag.all.each do |it| %>
      <% if it.name.eql? @label %>
        <a class="ui red label", href="<%= @label_path + "/" + it.name %>"><%= it.name %></a>
      <% else %>
        <a class="ui label", href="<%= @label_path + "/" + it.name %>"><%= it.name %></a>
      <% end %>
    <% end %>
  </div>

  <table class="ui table">
    <tbody>
      <% @issues.each do |issue| %>
        <% if @parent_name == "Course" %>
          <% @issue_path = course_issue_path(@parent.id, issue.parent_issue_id) %>
        <% end %>
        <tr>
          <td><%= link_to issue.title, @issue_path%></td>
          <td><%= issue.created_at %></td>
          <% issue.issuetags.each do |it| %>
            <td class="ui tag mini label"><%= it.name %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="ui divider"></div>
  <%= link_to @new_path do %>
    <div class="ui button">글쓰기</div>
  <% end %>
  <%= link_to course_path(@parent.id) do %>
    <div class="ui button">돌아가기</div>
  <% end %>
</div>

